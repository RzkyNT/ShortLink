# Enable Rewrite Engine
RewriteEngine On
RewriteBase /url_shortener/

# Redirect to HTTPS (optional)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Don't rewrite files and directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Jangan rewrite file admin & config
RewriteCond %{REQUEST_URI} !^/url_shortener/(index|login|logout|dashboard|create|edit|delete|analytics|install|redirect)\.php
RewriteCond %{REQUEST_URI} !^/url_shortener/config/

# Rewrite semua short codes ke redirect.php
RewriteRule ^([^/]+)/?$ redirect.php?code=$1 [L,QSA]

# Prevent directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8